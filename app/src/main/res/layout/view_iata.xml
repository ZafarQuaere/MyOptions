<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/lytCorporateClient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.optiontown.app.view.customview.OTTextView
        android:id="@+id/txtCorporateClientShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/corporate_client"
        android:textColor="@color/color_font_blue"
        android:paddingRight="@dimen/dp_5"
        android:textSize="@dimen/size_font_12"
        android:textStyle="bold"
        android:layout_gravity="right"/>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlytCorpClientDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtCorpClientDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/corporate_client"
            android:textColor="@color/color_font_black"
            android:textStyle="bold"
            android:textSize="@dimen/size_font_11"/>

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtCorpClientHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtCorpClientDetail"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/size_font_11"
            android:textStyle="bold"
            android:textColor="@color/color_font_blue"
            android:text="@string/hide"/>

        <LinearLayout
            android:id="@+id/lytTourCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/txtCorpClientDetail"
            android:orientation="horizontal">

            <com.optiontown.app.view.customview.OTTextView
                android:layout_alignParentLeft="true"
                android:id="@+id/txtTourCodeLabel"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_11"
                android:textColor="@color/color_font_black"
                android:text="@string/tour_code"/>

            <com.optiontown.app.view.customview.OTEditText
                android:id="@+id/edtTourCode"
                android:layout_toRightOf="@+id/txtTourCodeLabel"
                android:layout_width="@dimen/dp_0"
                android:padding="@dimen/dp_6"
                android:layout_weight="1.5"
                android:textSize="@dimen/size_font_11"
                android:maxLength="30"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_stroke_light_blue"
                android:layout_marginLeft="@dimen/dp_5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/lytTourCode"
            android:orientation="horizontal">

            <com.optiontown.app.view.customview.OTTextView
                android:layout_alignParentLeft="true"
                android:id="@+id/txtRegistrationNumberLabel"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_11"
                android:textColor="@color/color_font_black"
                android:text="@string/registration_number"/>

            <com.optiontown.app.view.customview.OTEditText
                android:id="@+id/edtRegistrationNumber"
                android:layout_toRightOf="@+id/txtRegistrationNumberLabel"
                android:layout_width="@dimen/dp_0"
                android:padding="@dimen/dp_6"
                android:textSize="@dimen/size_font_11"
                android:layout_weight="1.5"
                android:maxLength="40"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_stroke_light_blue"
                android:layout_marginLeft="@dimen/dp_5"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>