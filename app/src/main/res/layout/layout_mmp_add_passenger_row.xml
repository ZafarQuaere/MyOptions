<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_light"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp_1">


    <RelativeLayout
        android:id="@+id/lytRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_27"
        android:paddingRight="@dimen/dp_27"
        >

        <ImageView
            android:id="@+id/imgUserIcon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true" />


        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/imgUserIcon"
            android:text="Smith Jack"
            android:textColor="@color/color_font_gray_dark"
            android:textSize="@dimen/size_font_11"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tick_green_icon" />


    </RelativeLayout>


    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray_dark"
        android:visibility="gone" />

    <View
        android:id="@+id/viewMargin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone" />

</LinearLayout>