<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_white">


    <LinearLayout
        android:id="@+id/parent_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txt_transaction_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.98"
            android:background="@color/color_red"
            android:gravity="center"
            android:text="@string/string_transaction_details"
            android:textColor="@color/caldroid_white"
            android:textSize="@dimen/size_font_11"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="@color/color_gray_dark"
            />




        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txt_update_passenger"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.99"
            android:background="@color/color_common_border"
            android:gravity="center"
            android:text="@string/string_update_passenger"
            android:textColor="@color/caldroid_black"
            android:textSize="@dimen/size_font_11"
            android:textStyle="bold"
            android:visibility="gone"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="@color/color_gray_dark"
            android:visibility="gone"/>

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txt_book_flights"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.99"
            android:background="@color/color_common_border"
            android:gravity="center"
            android:text="@string/string_view_deatils"
            android:textColor="@color/caldroid_black"
            android:textSize="@dimen/size_font_11"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>