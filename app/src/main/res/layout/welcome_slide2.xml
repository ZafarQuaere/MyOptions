<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp_50"
    android:scrollbars="none">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:elevation="@dimen/dp_20">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:src="@drawable/optionpass_logo" />

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Who We Are"
            android:textColor="@color/color_font_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.optiontown.app.view.customview.OTTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="@string/intro_who_we_are_"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_14" />

        <com.optiontown.app.view.customview.OTTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="Our Products Are :"
            android:textStyle="bold"
            android:textColor="@color/color_font_blue"
            android:textSize="@dimen/size_font_14" />

        <com.optiontown.app.view.customview.OTTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="@string/optiontwon_products"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80" />

    </LinearLayout>

    </android.support.v7.widget.CardView>

</ScrollView>