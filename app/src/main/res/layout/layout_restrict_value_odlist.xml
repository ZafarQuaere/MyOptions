<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_2"
        android:weightSum="10">

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtRestrictRoute"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Routes"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_12" />

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtRestrictDateRange"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Travel Period"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_12" />

    </LinearLayout>

    <View
        android:id="@+id/viewBorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.7"
        android:background="@color/color_common_border" />

</LinearLayout>