<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lytPage">

    <LinearLayout
        android:id="@+id/lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:paddingBottom="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/lytTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtDA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KUL > MEL"
                android:textSize="@dimen/size_font_22"
                android:textStyle="bold"
                android:textColor="@color/color_font_black"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturday, August 31"
                    android:textSize="@dimen/size_font_12"
                    android:textStyle="bold"
                    android:textColor="@color/color_font_black"
                    />

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10h 33m"
                    android:textSize="@dimen/size_font_12"
                    android:textStyle="normal"
                    android:textColor="@color/color_font_black"
                    android:layout_marginLeft="@dimen/dp_5"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_gray_dark"
                android:layout_marginTop="@dimen/dp_20"
                />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgAirlineLogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                />

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtAirlineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Asia"
                android:textSize="@dimen/size_font_13"
                android:textStyle="normal"
                android:textColor="@color/color_font_black"
                android:layout_marginLeft="@dimen/dp_5"/>



        </LinearLayout>

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Veuling operates flights 8810"
            android:textSize="@dimen/size_font_13"
            android:textStyle="normal"
            android:textColor="@color/color_font_gray"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtDepartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:10p"
                android:textSize="@dimen/size_font_16"
                android:textStyle="bold"
                android:textColor="@color/color_font_black"
                android:layout_alignParentLeft="true"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_2">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/arrow_left_con"
                    />

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtTravelTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10h 30m"
                    android:textSize="@dimen/size_font_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_font_black"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/arrow_right_con"
                    />

            </LinearLayout>

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtArrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:40a"
                android:textSize="@dimen/size_font_16"
                android:textStyle="bold"
                android:textColor="@color/color_font_black"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtDepartAirport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KUL"
                android:textSize="@dimen/size_font_14"
                android:textStyle="normal"
                android:textColor="@color/color_font_black"
                android:layout_alignParentLeft="true"/>

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtOvernight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overnight"
                android:textSize="@dimen/size_font_14"
                android:textStyle="normal"
                android:textColor="@color/color_font_red"
                android:layout_centerHorizontal="true"/>

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtArriveAirport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YQY"
                android:textSize="@dimen/size_font_14"
                android:textStyle="normal"
                android:textColor="@color/color_font_black"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray_dark"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtCabin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Economy"
                    android:textSize="@dimen/size_font_14"
                    android:textStyle="normal"
                    android:textColor="@color/color_font_black"
                    android:layout_weight="9"/>

                <ImageView
                    android:id="@+id/imgExpand"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/minus"
                    android:layout_weight="1"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lytAbbreviation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtAirbus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Airbus A320"
                    android:textSize="@dimen/size_font_14"
                    android:textStyle="normal"
                    android:textColor="@color/color_font_black"
                    android:layout_marginTop="@dimen/dp_5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <com.optiontown.app.view.customview.OTTextView
                        android:id="@+id/txtDepartAbbreviation"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="BOM"
                        android:textSize="@dimen/size_font_14"
                        android:textStyle="bold"
                        android:textColor="@color/color_font_black"
                        android:background="@drawable/rounded_stroke_blue"
                        android:padding="@dimen/dp_5"
                        android:gravity="center"/>

                    <com.optiontown.app.view.customview.OTTextView
                        android:id="@+id/txtDepartFull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KualaLumpur"
                        android:textSize="@dimen/size_font_14"
                        android:textStyle="normal"
                        android:textColor="@color/color_font_black"
                        android:layout_marginLeft="@dimen/dp_10"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <com.optiontown.app.view.customview.OTTextView
                        android:id="@+id/txtArrivalAbbreviation"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="DEL"
                        android:textSize="@dimen/size_font_14"
                        android:textStyle="bold"
                        android:textColor="@color/color_font_black"
                        android:background="@drawable/rounded_stroke_blue"
                        android:padding="@dimen/dp_5"
                        android:gravity="center"/>

                    <com.optiontown.app.view.customview.OTTextView
                        android:id="@+id/txtArrivalFull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Melbourne"
                        android:textSize="@dimen/size_font_14"
                        android:textStyle="normal"
                        android:textColor="@color/color_font_black"
                        android:layout_marginLeft="@dimen/dp_10"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <com.optiontown.app.view.customview.OTTextView
        android:id="@+id/txtLayoverTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2h 17m layover in YQY"
        android:textSize="@dimen/size_font_13"
        android:textStyle="normal"
        android:textColor="@color/color_font_gray_dark"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_5"/>

</LinearLayout>