<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lytHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@color/color_gray_light"
        android:gravity="center">

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtLabelFlight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FRo Flight"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_11"
            android:textStyle="bold"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_common_border"/>

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtLabelDepartArrive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Depart/Arrive"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_11"
            android:textStyle="bold"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_common_border"/>

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtLabelSignup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Signup Reward"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_11"
            android:textStyle="bold"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_common_border"/>

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtLabelRebookReward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rebook Reward"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_11"
            android:textStyle="bold"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytRow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:orientation="horizontal"
        android:background="@drawable/gradiant_gray"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgLogoAirline"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/vistara_logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_5">

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtFlightNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D7 2107"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_11"
                    android:textStyle="bold"
                    />

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtConnection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non-Stop"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_11"
                    android:textStyle="normal"
                    />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_common_border"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/txtDepartArrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CDG 8:30 AM \nSGN 4:45PM"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/size_font_11"
                android:textStyle="normal"
                />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_common_border"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5"
                android:textColor="@color/color_font_red"
                android:textSize="@dimen/size_font_13"
                android:textStyle="normal"
                />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_common_border"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtRebookReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5"
                android:textColor="@color/color_font_red"
                android:textSize="@dimen/size_font_13"
                android:textStyle="normal"
                />

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:textColor="@color/color_font_white"
                android:textSize="@dimen/size_font_10"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:background="@drawable/rounded_small_corner_search"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lytInfoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:background="@drawable/gradiant_gray"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minus"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_20"
            >

            <LinearLayout
                android:id="@+id/lytInfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/txtInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You will instantly earn"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_11"
                    android:textStyle="normal"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_corner"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_40">

                    <com.optiontown.app.view.customview.OTTextView
                        android:id="@+id/txtAmount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5"
                        android:textColor="@color/color_font_red"
                        android:textSize="@dimen/size_font_13"
                        android:textStyle="normal"
                        />

                    <com.optiontown.app.view.customview.OTTextView
                        android:id="@+id/txtAmountCategory1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signup Reward"
                        android:textColor="@color/color_font_black"
                        android:textSize="@dimen/size_font_11"
                        android:textStyle="bold"
                        android:padding="@dimen/dp_5"
                        android:gravity="center"
                        />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/txtInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You will instantly earn"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_11"
                    android:textStyle="normal"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_corner"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_40">

                    <com.optiontown.app.view.customview.OTTextView
                        android:id="@+id/txtAmount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5"
                        android:textColor="@color/color_font_red"
                        android:textSize="@dimen/size_font_13"
                        android:textStyle="normal"
                        />

                    <com.optiontown.app.view.customview.OTTextView
                        android:id="@+id/txtAmountCategory2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signup Reward"
                        android:textColor="@color/color_font_black"
                        android:textSize="@dimen/size_font_11"
                        android:textStyle="bold"
                        android:padding="@dimen/dp_5"
                        android:gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You will be notified via email no later than Sat 5 Aug 10:00"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/size_font_11"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>