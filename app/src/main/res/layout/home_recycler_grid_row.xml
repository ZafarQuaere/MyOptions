<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingTop="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="3dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/imgOption"
        android:layout_width="@dimen/width_home_recycler_grid_view"
        android:layout_height="wrap_content"
        android:src="@drawable/loading_image_square"
        android:adjustViewBounds="true"
        />

    <com.optiontown.app.view.customview.OTTextView
        android:id="@+id/txtOptionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:singleLine="true"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:background="@color/transparent_color_home_recycler_grid_text_view"
        android:textColor="@color/color_golden"
        android:layout_alignBottom="@id/imgOption"
        android:layout_alignRight="@id/imgOption"/>

</RelativeLayout>