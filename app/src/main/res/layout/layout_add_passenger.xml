<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/add_user_icon"
            android:layout_marginTop="@dimen/dp_9"/>

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtPassenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger 1*"
            android:textStyle="normal"
            android:textSize="@dimen/size_font_11"
            android:textColor="@color/color_font_black"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_3"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtSelectPassenger"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_40"
                android:text="@string/string_select"
                android:textStyle="normal"
                android:textSize="@dimen/size_font_11"
                android:textColor="@color/color_font_black"
                android:background="@drawable/bg_spinner"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_10"
                android:ellipsize="end"
                android:ems="5"
                android:singleLine="true"/>

            <LinearLayout
                android:id="@+id/lytUserDropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/txtSelectPassenger"
                android:layout_alignRight="@+id/txtSelectPassenger"
                android:layout_alignLeft="@+id/txtSelectPassenger"
                android:background="@drawable/rounded_dark_gray_stroke"
                android:visibility="gone">

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtSelectFromAccountLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select from account"
                    android:textStyle="normal"
                    android:textSize="@dimen/size_font_11"
                    android:textColor="@color/color_font_blue"
                    android:padding="@dimen/dp_5"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:id="@+id/lytAllUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10">

                </LinearLayout>

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtNewPassengerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Passenger"
                    android:textStyle="normal"
                    android:textSize="@dimen/size_font_11"
                    android:textColor="@color/color_font_blue"
                    android:padding="@dimen/dp_5"
                    android:gravity="center_vertical"/>

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtAddNewPassengerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_add_new_passenger"
                    android:textStyle="normal"
                    android:textSize="@dimen/size_font_11"
                    android:textColor="@color/color_font_black"
                    android:padding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/edit_icon"
            android:layout_marginTop="@dimen/dp_12"
            android:padding="@dimen/dp_2"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/remove_icon_big"
            android:layout_marginTop="@dimen/dp_12"
            android:padding="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_2"
            android:visibility="gone"/>
    </LinearLayout>


    <com.optiontown.app.view.customview.OTTextView
        android:id="@+id/txtAddNewPassenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_add_new_passenger"
        android:textStyle="normal"
        android:textSize="@dimen/size_font_11"
        android:textColor="@color/color_font_blue"
        android:padding="@dimen/dp_5"
        android:gravity="center_vertical"
        android:visibility="gone"/>



</LinearLayout>