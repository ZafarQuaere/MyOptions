<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lytJourneyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/flight"
                android:rotation="90"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone"/>

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtJourneyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outbound"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/size_font_13"
                android:textStyle="normal"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_0"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_10">

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sydney (SYD)"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_13"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_0"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/book_flight_arrow"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H.C.Minh City (SGN)"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_13"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_0"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jul 13"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_13"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/dp_0"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtUnavailableMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/color_font_red"
                    android:textSize="@dimen/size_font_13"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/dp_5"/>

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtDesireDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What's your desired date for preferred flight?"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_11"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_0"
                    android:paddingRight="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_0"
                    android:paddingBottom="@dimen/dp_0"
                    android:background="@drawable/bg_spinner"
                    android:gravity="center_vertical"/>

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtDesireDateError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/color_font_red"
                    android:textSize="@dimen/size_font_10"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:visibility="gone"/>

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtNotificationDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latest date to rebook you to preferred flight?"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_11"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_0"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_0"
                    android:paddingBottom="@dimen/dp_0"
                    android:background="@drawable/bg_spinner"
                    android:gravity="center_vertical"
                    />

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtNotificationDateError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/color_font_red"
                    android:textSize="@dimen/size_font_10"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:visibility="gone"/>

            </LinearLayout>





        </LinearLayout>

    </LinearLayout>
</LinearLayout>