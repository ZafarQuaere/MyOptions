<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/lytSeatSummaryChild"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.optiontown.app.view.customview.OTTextView
        android:id="@+id/txt_outbound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:text="Outbound"
        android:textColor="@color/caldroid_black"
        android:textSize="@dimen/size_font_11" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_seatSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_outbound"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10" />

</RelativeLayout>