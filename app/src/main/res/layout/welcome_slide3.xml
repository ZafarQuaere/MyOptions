<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_20"
        android:padding="@dimen/dp_5">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Our Partners"
                android:textColor="@color/color_font_blue"
                android:textSize="18sp"
                android:textStyle="bold" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerOurPartners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.optiontown.app.view.customview.OTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flight Pass allows you to conveniently pre-purchase a Number of Flights at an agreed LOW PRICE and enjoy the privilege of booking flights later as per your need. The more credits you buy, the cheaper it gets."
                android:textSize="@dimen/size_font_12" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_eso_button_bg" />

            <com.optiontown.app.view.customview.OTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flight Pass allows you to conveniently pre-purchase a Number of Flights at an agreed LOW PRICE and enjoy the privilege of booking flights later as per your need. The more credits you buy, the cheaper it gets."
                android:textSize="@dimen/size_font_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</ScrollView>