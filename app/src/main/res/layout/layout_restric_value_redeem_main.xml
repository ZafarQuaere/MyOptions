<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytFMMatrixRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:weightSum="10"
    android:orientation="horizontal">

        <ImageView
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_22"
            android:layout_weight="0.4"
            android:src="@drawable/cabin" />

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtFeatureTypeName"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="3.6"
            android:text="Travel Period"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_13"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lytRstricValuesFeatureDetail"
            android:paddingLeft="@dimen/dp_3"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
        </LinearLayout>


</LinearLayout>