<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/legproduct_onseatselection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_0_radius_filled_white"
    android:orientation="vertical"
    app:cardElevation="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">


        <TextView
            android:id="@+id/txt_seat_toplabel_seat_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seat Summary"
            android:textColor="@color/caldroid_black"
            android:textSize="@dimen/size_font_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_label_ooutbound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_seat_toplabel_seat_summary"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:text="Outbound"
            android:textColor="@color/caldroid_black"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_pnh_rep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_label_ooutbound"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/caldroid_lighter_gray"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_3"
            android:text="PNH > REP"
            android:textColor="@color/caldroid_black"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/lay_passenger_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_pnh_rep"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/txt_passenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:text="THELWELL/TERENCHER"
                android:textColor="@color/caldroid_black"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="right"
                android:text="-"
                android:textColor="@color/caldroid_black"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_sub_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_passenger_info"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/txt_subtotal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:text="THELWELL/TERENCHER"
                android:textColor="@color/caldroid_black"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="right"
                android:text="$2"
                android:textColor="@color/caldroid_black"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_gran_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_passenger_info"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/color_font_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/txt_grand_total_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_10"
                android:text="Grand Total"
                android:textColor="@color/caldroid_white"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_grand_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:gravity="right"
                android:text="$2"
                android:textColor="@color/caldroid_white"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_gran_total"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_red"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Continue"
            android:textColor="@color/caldroid_white"
            android:textSize="@dimen/size_font_12"
            android:textStyle="bold"
            android:visibility="visible" />


    </RelativeLayout>


</android.support.v7.widget.CardView>