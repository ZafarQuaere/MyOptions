<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytSelectBookFlightPassRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtTravelZoneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Germany"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_13"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtTravelPeriodLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel Period"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_10"
                    android:textStyle="normal"

                    />

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtTravelPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="22 May 2016 - 22 Jun 2016"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_13"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:orientation="vertical">

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtAvailableFlightsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Flights"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_10"
                    android:textStyle="normal" />

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtAvailableFlights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_horizontal"
                    android:text="5"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_13"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:id="@+id/lytAdvanceBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtAdvanceBookingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance Booking"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_10"
                    android:textStyle="normal" />

                <com.optiontown.app.view.customview.OTTextView
                    android:id="@+id/txtAdvanceBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="7 days"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/size_font_13"
                    android:textStyle="normal" />

            </LinearLayout>

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtBookFlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_small_corner_search"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:text="Book Flight"
                android:textColor="@color/color_font_white"
                android:textSize="@dimen/size_font_13"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtOCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OCN # 1236547412"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/size_font_13"
                android:textStyle="normal" />

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
               android:paddingLeft="@dimen/dp_15"
                android:gravity="right"
                android:text="View Details"
                android:textColor="@color/color_font_blue"
                android:textSize="@dimen/size_font_12"
                android:textStyle="normal" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="100dp" />


</LinearLayout>