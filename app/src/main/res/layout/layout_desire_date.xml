<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lytRadioDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/rbOtherDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="other date"
            />

        <LinearLayout
            android:id="@+id/lytCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:padding="@dimen/dp_4"
            android:background="@drawable/rounded_light_gray_stroke">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jul-23-2017"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/size_font_13"
                android:textStyle="normal"
                />

            <ImageView
                android:id="@+id/imgCalendar"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/depart_date_32"
                android:layout_marginLeft="@dimen/dp_15"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>