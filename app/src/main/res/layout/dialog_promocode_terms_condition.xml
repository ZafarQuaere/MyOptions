<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_promocode_popup_termcondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_4">

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/txtPromoCodeHeadingPopUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/string_promocode_terms_condition"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/size_font_15"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_disablepopup"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp_4"
                android:src="@drawable/ic_clear_black_24dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/caldroid_gray"/>

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtLabelPromoTermsCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="Promo Code XXXYYDSDS Terms and Conditions"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold"
            android:visibility="gone"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <LinearLayout
                android:id="@+id/lay_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_6">

                <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/txtPromoTermsConditionDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a. 	Flight Pass must be purchased between 30th January 2017 and 3rd February 2017 (both dates inclusive)."
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/dp_12" />

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</RelativeLayout>