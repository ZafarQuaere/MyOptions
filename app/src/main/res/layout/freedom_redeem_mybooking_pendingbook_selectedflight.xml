<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.optiontown.app.view.customview.OTTextView
        android:id="@+id/txt_label_selected_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:text="Selected Flights"
        android:textColor="@color/caldroid_black"
        android:textSize="@dimen/size_font_13"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_label_selected_flight"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_zone_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vistara"/>

            <com.optiontown.app.view.customview.OTTextView
                android:id="@+id/text_zone_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vistara"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.optiontown.app.view.customview.OTTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:10p"
                android:textColor="@color/caldroid_black"
                android:textStyle="bold"/>

            <com.optiontown.app.view.customview.OTTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:10p"
                android:layout_marginLeft="@dimen/dp_7"
                android:textStyle="normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:src="@drawable/arrow_connecting_half_second"/>

            <com.optiontown.app.view.customview.OTTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_connecting_half_first"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>