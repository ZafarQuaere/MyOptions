<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_advance_booking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lay_travel_period"
    android:layout_marginTop="@dimen/dp_15"
    android:orientation="horizontal"
    android:padding="@dimen/dp_2"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <ImageView
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_22"
            android:layout_weight="0.4"
            android:src="@drawable/earlybook_icon" />

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtFeatureTypeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="2"
            android:text="@string/string_advance_booking"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_12"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtFeatureShortName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_book_30days_before_travel"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_12"
            android:textStyle="bold" />

        <com.optiontown.app.view.customview.OTTextView
            android:id="@+id/txtFeatureShortTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_book_30days_before_travel"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/size_font_12" />

    </LinearLayout>

</LinearLayout>